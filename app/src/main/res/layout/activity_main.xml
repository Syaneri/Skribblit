<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    android:background="#DB57C0">

    <LinearLayout
        android:id="@+id/ll_panel"
        android:layout_width="300dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@drawable/panel_background">

        <ImageView
            android:id="@+id/iv_display_pic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/ronin"/>

        <ImageButton
            android:id="@+id/btn_switch_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:background="@drawable/change_icon"
            android:scaleType="fitCenter"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_gravity="center"
            android:hint="Name"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:gravity="center"
            android:background="#D3D3D3"
            android:layout_marginTop="5dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_gravity="center"
            android:hint="Code"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:gravity="center"
            android:background="#D3D3D3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp" />

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Enter Lobby"
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/btn_create"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Create Lobby"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_background"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>